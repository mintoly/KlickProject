    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.userpage.UserFragment"
    android:orientation="vertical"
    android:layout_margin="10dp">


    <!--<TextView
        android:id="@+id/text_user_inst"
