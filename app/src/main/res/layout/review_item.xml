<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/img_review"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout_review_user_info"
        app:layout_constraintStart_toEndOf="@+id/img_review"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_review_user_name"
            android:text="id"/>

        <View
            android:layout_width="10dp"
            android:layout_height="0dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_review_user_level"
            android:text="lv3"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout_review_info"
        app:layout_constraintStart_toEndOf="@id/img_review"
        app:layout_constraintTop_toBottomOf="@+id/layout_review_user_info">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_review_date"
            android:text="2020.1.5"/>
        <View
            android:layout_width="10dp"
            android:layout_height="0dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_review_rating"
            android:text="4.5/5"/>
        <View
            android:layout_width="10dp"
            android:layout_height="0dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_review_cost"
            android:text="3200\\"/>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/img_review"
        app:layout_constraintTop_toBottomOf="@+id/img_review"
        android:layout_marginLeft="15dp"
        android:id="@+id/text_review_contents"
        android:text="ASDF"/>

    <!-- TODO: comments
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_review_comment"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@id/img_review"
        app:layout_constraintTop_toBottomOf="@id/text_review_contents"/>
        -->


</androidx.constraintlayout.widget.ConstraintLayout>